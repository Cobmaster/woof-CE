download() {
    [ -f Xdialog-2016.12.tar.bz2 ] || wget -t 1 -T 15 http://ftp.cc.uoc.gr/mirrors/linux/fatdog/source/710/Xdialog-2016.12.tar.bz2
}

build() {
    tar -xjf Xdialog-2016.12.tar.bz2
    cd Xdialog
    ./configure --prefix=/usr --mandir=/usr/share/man --with-gtk2
    make install
    rm -rf /usr/share/doc
}